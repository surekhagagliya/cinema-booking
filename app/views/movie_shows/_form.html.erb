<%= form_for [current_manager, @screen, @movie_show] do |form|%>
    <div class="form-group">
        <%= form.label :date%>:
        <%= form.date_field :date, class:'form-control'%>
    </div>

    <div class="form-group">
        <%= form.label :time%>:
        <%= form.time_field :time, class:'form-control'%>
    </div>

    <%= form.submit 'submit', class: 'btn btn-success'%>
<% end %>
