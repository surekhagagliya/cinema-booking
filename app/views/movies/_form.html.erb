<%= form_for [current_manager, @movie] do |movie| %>
    <%= movie.label :name%>
    <%= movie.text_field :name%><br>

    <%= movie.label 'type' %>
    <%= movie.text_field :movie_type%><br>

    <%= movie.label 'Votes' %>
    <%= movie.number_field :votes%><br>

    <%= movie.label 'Rates' %>
    <%= movie.number_field :rates%><br>

    <%= movie.label 'Summary' %>
    <%= movie.text_area :summary%><br>

    <%= movie.label 'Static Review'%>
    <%= movie.text_area :static_review%><br>

    <%= movie.label 'Trailer'%>
    <%= movie.text_field :trailer%><br>

    <%= movie.label 'Screen Number'%>
    <%= movie.number_field :screen_number%><br>

    <%= movie.label 'Release Date'%>
    <%= movie.date_field :release_date%><br>

    <%= movie.label 'End Date'%>
    <%= movie.date_field :end_date%><br>

    <%= movie.label 'Time'%>
    <%= movie.time_field :time%><br>

    <%= movie.submit%>
<% end %>